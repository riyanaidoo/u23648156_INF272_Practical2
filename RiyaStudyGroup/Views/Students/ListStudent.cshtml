@model IEnumerable<RiyaStudyGroup.Models.StudentModel>

@{
    ViewBag.Title = "List of Students";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        .btn {
            display: inline-block;
            padding: 9px 20px;
            background-color: green;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s;
        }
    </style>
</head>
<body style="background-color: lightblue;">
    <h2>ListStudent</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.myLink)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="@Url.Content(item.myLink)" class="btn" target="_blank">LINK</a>
                </td>
            </tr>
        }

    </table>
</body>
</html>